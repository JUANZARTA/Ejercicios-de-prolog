%HECHOS
alumno(alejandro, estructuras,3.3).
alumno(camilo, estructuras,2.3).
alumno(pedro, bases,1.3).
alumno(sofia, bases,2.3).
alumno(julian, bases,4.3).

%REGLAS
gano_asignatura(X,Asugnatura):-alumno(X,Asignatura,Nota), Nota>=3.

%PREGUNTAS
%que estudiante ganaron estructuras?
?-gano_asignatura(X,estructuras),wirte(X), nl,ln.